<script>
  const loadMoreBtn = document.getElementById('loadMoreBtn');
  const treatmentGrid = document.querySelector('.treatment-grid');

  let treatmentsShown = 1;

  function showTreatments() {
    const treatments = document.querySelectorAll('.treatment-grid .col-lg-4');
    treatments.forEach((treatment, index) => {
      if (index < treatmentsShown) {
        treatment.style.display = 'block';
      } else {
        treatment.style.display = 'none';
      }
    });
  }

  showTreatments();

  if (treatmentGrid && loadMoreBtn) {
    loadMoreBtn.addEventListener('click', () => {
      treatmentsShown += 1;
      showTreatments();
      if (treatmentsShown >= treatmentPlan.questions.length) {
        loadMoreBtn.style.display = 'none';
      }
    });
  }
</script>
