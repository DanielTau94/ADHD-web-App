<div class="container">
  <% if (treatmentPlan && treatmentPlan.questions.length > 0) { %>
    <div id="treatmentPlanContent">
      <div class="row">
        <div class="col-lg-12">
          <div class="treatment-intro">
            <h3>Welcome to <%= treatmentPlan.studentName %>'s Treatment Plan</h3>
            <p>This treatment plan was custom made according to the form you filled for the student.</p>
            <p>Each treatment is labeled based on the level of attention required:</p>
            <div class="attention-metric">
              <div class="metric-bar">
                <div class="green-bar"></div>
                <div class="yellow-bar"></div>
                <div class="red-bar"></div>
              </div>
            </div>
            <p class="attention-desc">
              Color Guide:
              <span class="green-color">Green</span> - Minimal Attention Required
              <span class="yellow-color">Orange</span> - Medium Attention Required
              <span class="red-color">Red</span> - High Attention Required
            </p>
          </div>
          <div class="row treatment-grid">
            <% treatmentPlan.questions
                .sort((a, b) => b.answer - a.answer) // Sort treatments by score in descending order
                .forEach(question => { %>
              <% let score = question.answer; %>
              <% let treatmentStyle = ''; %>
              <% if (score === 1) { %>
                <% treatmentStyle = 'background-color: #28a745; color: white;'; %> 
              <% } else if (score === 2 || score === 3) { %>
                <% treatmentStyle = 'background-color: #ffc107; color: black;'; %>
              <% } else if (score >= 4 && score <= 5) { %>
                <% treatmentStyle = 'background-color: red; color: white;'; %>
              <% } %>
              <div class="col-lg-4 mb-4">
                <div class="card" <% if (treatmentStyle) { %>style="<%= treatmentStyle %>"<% } %>>
                  <div class="card-body">
                    <% if (score >= 4 && score <= 5) { %>
                      <i class="fas fa-exclamation-circle"></i>
                    <% } else if (score === 2 || score === 3) { %>
                      <i class="fas fa-exclamation-triangle"></i>
                    <% } else if (score === 1) { %>
                      <i class="fas fa-info-circle"></i> 
                    <% } %>
                    <p class="card-text"><%= question.treatment %></p>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
          <% if (treatmentPlan.questions.length > 1) { %>
            <button id="loadMoreBtn" class="btn btn-primary">Load More</button>
          <% } %>
        </div>
      </div>
    </div>
  <% } else { %>
    <p><%= message %></p>
  <% } %>
</div>
