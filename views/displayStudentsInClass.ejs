    <div class="col-lg-12">
      <h2>Students in Class <%= className %></h2>
      <% if (students.length > 0) { %>
        <div class="mt-4">
          <h3>Student List</h3>
          <table class="table">
            <thead>
              <tr>
                <th>Student Name</th>
                <th>Has Form</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < students.length; i++) { %>
                <tr>
                  <td>
                    <a href="#" class="student-link" data-student-id="<%= students[i].studentID %>" data-has-form="<%= students[i].hasForm %>">
                      <%= students[i].studentName %> <%= students[i].studentLastName %>
                    </a>
                  </td>
                  <td><%= students[i].hasForm == "Yes" ? 'Yes' : 'No' %></td>
                  <td>
                    <form action="/users/deleteHyperActivityForm" method="POST">
                      <input type="hidden" name="studentID" value="<%= students[i].studentID %>">
                      <input type="hidden" name="currentPage" value="displayStudentsInClass">
                      <button type="submit" class="btn btn-link"><i class="fas fa-trash"></i></button>
                    </form>
                    <form action="/users/editHyperActivityForm" method="POST">
                      <input type="hidden" name="studentID" value="<%= students[i].studentID %>">
                      <button type="submit" class="btn btn-link"><i class="fas fa-edit"></i></button>
                    </form>
                    <form action="/users/singleHyperActivityForm" method="POST">
                      <input type="hidden" name="studentID" value="<%= students[i].studentID %>">
                      <button type="button" class="btn btn-link fas-plus-button" data-has-form="<%= students[i].hasForm %>"><i class="fas fa-plus"></i></button>
                    </form>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <% if (totalPages > 1) { %>
            <% if (currentPage > 1) { %>
              <a href="/displayStudentsInClass?className=<%= className %>&page=<%= currentPage - 1 %>" class="btn btn-primary">Previous Students</a>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <a href="/displayStudentsInClass?className=<%= className %>&page=<%= currentPage + 1 %>" class="btn btn-primary">Next Students</a>
            <% } %>
          <% } %>
        </div>
        <div class="mt-4">
          <p class="mb-2">Explanation of Icons:</p>
          <ul class="list-inline">
            <li>
              <i class="fas fa-trash"></i>
              <span>Delete Form</span>
            </li>
            <li>
              <i class="fas fa-edit"></i>
              <span>Edit Form</span>
            </li>
            <li>
              <i class="fas fa-plus"></i>
