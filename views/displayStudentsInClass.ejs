<!-- Modal Dialog for Confirmation Message -->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="confirmationMessage"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirmButton">Confirm</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const fasPlusButtons = document.querySelectorAll(".fas-plus-button");
    fasPlusButtons.forEach(function(button) {
      button.addEventListener("click", function(event) {
        event.preventDefault();
        const hasForm = button.getAttribute("data-has-form");
        if (hasForm === "Yes") {
          const confirmationMessage = "A form already exists for this student. Delete it to create a new form.";
          showConfirmationDialog(confirmationMessage, function(result) {
            if (result) {
              showDialog("Delete form action performed.");
            }
          });
        } else {
          button.parentNode.submit();
        }
      });
    });

    const studentLinks = document.querySelectorAll(".student-link");
    studentLinks.forEach(function(link) {
      link.addEventListener("click", function(event) {
        event.preventDefault();
        const hasForm = link.getAttribute("data-has-form");
        const formAction = hasForm === "Yes" ? "/users/editHyperActivityForm" : "/users/singleHyperActivityForm";
        const confirmationMessage = hasForm === "Yes" ? "A form already exists for this student. Do you want to edit the form?" : "No form exists for this student. Do you want to begin a new form?";
        showConfirmationDialog(confirmationMessage, function(result) {
          if (result) {
            const form = document.createElement('form');
            form.action = formAction;
            form.method = 'POST';
            const studentIDInput = document.createElement('input');
            studentIDInput.type = 'hidden';
            studentIDInput.name = 'studentID';
            studentIDInput.value = link.getAttribute("data-student-id");
            form.appendChild(studentIDInput);
            document.body.appendChild(form);
            form.submit();
          }
        });
      });
    });

    function showDialog(message) {
      const dialog = document.querySelector('#confirmationModal');
      const dialogMessage = document.querySelector('#confirmationMessage');
      dialogMessage.textContent = message;
      $(dialog).modal('show');
    }

    function showConfirmationDialog(message, callback) {
      const dialog = document.querySelector('#confirmationModal');
      const dialogMessage = document.querySelector('#confirmationMessage');
      const confirmButton = document.querySelector('#confirmButton');
      dialogMessage.textContent = message;
      confirmButton.addEventListener('click', function() {
        $(dialog).modal('hide');
        callback(true);
      });
      $(dialog).modal('show');
    }
  });
</script>
